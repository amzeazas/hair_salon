<h1>Here are the details for this stylist:</h1>

<h3>
  First name: <%= @stylist.first_name() %>
  <br>
  Last name: <%= @stylist.last_name() %>
  <br>
  Phone number: <%= @stylist.phone_number() %>
</h3>

<form action="/stylist/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="stylist">Update stylist info:</label>
  <br>
  <input id="first_name" name="first_name" type="text" placeholder="Update first name">
  <br>
  <input id="last_name" name="last_name" type="text" placeholder="Update last name">
  <br>
  <input id="phone_number" name="phone_number" type="text" placeholder="Update phone number">
  <button type="submit">Update</button>
</form>
<br>

<form action='/stylist/<%= @stylist.id() %>' method='post'>
  <input name='_method' type='hidden' value='delete'>

  <button class='btn-danger' type='submit'>Delete</button>
</form>
<a href="/stylists">Back</a>
